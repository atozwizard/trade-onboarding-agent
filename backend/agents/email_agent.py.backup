        # Rule 3: Draft í‚¤ì›Œë“œ
        draft_keywords = ["ì‘ì„±", "ì´ˆì•ˆ", "ë§Œë“¤ì–´", "draft", "write"]
        if any(kw in user_input_lower for kw in draft_keywords):
            return "draft"

        # Rule 4: email_content ì¡´ì¬
        if "email_content" in context and context["email_content"]:
            return "review"

        # Rule 5: Default
        return "draft"

